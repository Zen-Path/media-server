{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["tampermonkey"] // Tells VS Code about GM_ functions
    },
    "include": ["frontend", "userscript", "vite.config.*"]
}
